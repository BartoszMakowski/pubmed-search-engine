{% extends "base.html.j2" %}
{% block content %}
<div class=="containter">
    <div class="col-lg-3"></div>
<div class="col-lg-6">
    <form action="" method="post" name="search">
    <div class="input-group">
        {{ form.hidden_tag() }}
      <!--<input type="text" class="form-control" >-->
        {{ form.search_phrase(class="form-control", placeholder="Wpisz frazę do wyszukania") }}
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit">Szukaj!</button>
      </span>
    </div><!-- /input-group -->
        </form>
  </div>
</div>
<!--<hr>-->
<div class="container">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <h3>Wyodrębnione tokeny:</h3>
        <p>
            {%- for token in tokens %}<span class="label label-success">{{ token }}</span> {%- endfor %}
        </p>

    </div>
</div>


<hr>
<table class="table table-hover" id="results">
    <thead>
    <tr>
        <th>REL</th>
        <th>ID</th>
        <th>Tytuł</th>
        <th>Punkty Lucene</th>
        <th>TF cos</th>
        <th>TF-IDF cos</th>
        <th>BM25</th>
    </tr>
    </thead>
    <tbody>
    {%- for art in articles|sort(attribute='rel', reverse=True) %}
    <tr>
        <td>{{ art.rel }}</td>
        <td>{{ art.id }}</td>
        <td>{{ art.title }}</td>
        <td>{{ art.score }}</td>
        <td>{{ art.tf_cos_sim }}</td>
        <td>{{ art.tfidf_cos_sim }}</td>
        <td>{{ art.bm25 }}</td>
    </tr>
    {%- endfor %}
    </tbody>
</table>
</div>
<script>
$(document).ready(function()
    {
        $("#results").tablesorter();
    }
);
</script>


{% endblock %}