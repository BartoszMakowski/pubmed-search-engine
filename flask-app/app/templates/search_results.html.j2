{% extends "base.html.j2" %}
{% block content %}
<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form action="" method="post" name="search">
            {{ form.hidden_tag() }}
            {{ form.search_phrase }}
            <input type="submit" value="Szukaj">
        </form>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <p>
            TOKENY:
            {%- for token in tokens %}{{ token }} {%- endfor %}
        </p>
    </div>
</div>

<hr>
<table class="table table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Tytu≈Ç</th>
        <th>Punkty</th>
        <th>TF</th>
        <th>TF-IDF</th>
    </tr>
    </thead>
    <tbody>
    {%- for art in articles %}
    <tr>
        <td>{{ art.id }}</td>
        <td>{{ art.title }}</td>
        <td>{{ art.score }}</td>
        <td>{{ art.tf }}</td>
        <td>{{ art.tfidf }}</td>
    </tr>
    {%- endfor %}
    </tbody>
</table>
{% endblock %}